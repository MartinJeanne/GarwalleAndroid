<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello world !" />

        <Button
            android:id="@+id/btnHelloWorldIntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to HelloWorldActivity !"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnOtherApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to an other app !" />

        <Button
            android:id="@+id/btnImpliciteIntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Call for an implicite intent !" />

        <Button
            android:id="@+id/btnSendSMS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send SMS" />

        <Button
            android:id="@+id/btnSendSMSviaIntent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send SMS via intent" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>